<body>
    
    {{> header}}

    <div class="form-area col-lg-12">

        <form  class="inside-form col-lg-6" action="/auths/register" method="post" >

            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter name" required>
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" required>
            </div>
        
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" minlength="6" maxlength="20" placeholder="password of 6 to 20 characters" required>
            </div>
        
            <div class="form-group">
                <label for="confirmpassword">Conform Password</label>
                <input type="password" class="form-control" id="confirmpassword" name="confirmpassword" placeholder="Re-enter Password" required>
            </div>

            <div class="form-group role">
                <input type="radio" id="student" name="role" value="student" required>
                <label for="student">Student</label><br>
                <input style="margin-left : 5px"type="radio" id="teacher" name="role" value="teacher">
                <label for="teacher">Teacher</label><br>
            </div>
            
            <div class="sub-button">
                <button style ="display : flex,justify-content:center" type="submit" class="btn btn-primary">Register</button>
            </div>
            {{#if message}}
                <span style="" class="alert alert-danger">{{message}}</span>
            {{/if}}
            {{#if register}}
                <span style="color : blue">{{register}}</span>
            {{/if}}                
        </form>
        
    </div>
    
    {{> footer}}
</body>
</html>